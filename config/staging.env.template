# ============================================
# RODISTAA STAGING ENVIRONMENT VARIABLES
# ============================================
# Staging environment for UAT and testing

# ==================== APPLICATION ====================
NODE_ENV=staging
PORT=4000
API_BASE_URL=https://api-staging.rodistaa.com
FRONTEND_URL=https://portal-staging.rodistaa.com

# ==================== DATABASE ====================
PGHOST=rodistaa-staging.cluster-xxxxxxxxx.ap-south-1.rds.amazonaws.com
PGPORT=5432
PGUSER=rodistaa_staging
PGPASSWORD=<STAGING-PASSWORD>
PGDATABASE=rodistaa_staging
PGSSLMODE=require
PGMAXCONNECTIONS=50

# ==================== REDIS ====================
REDIS_URL=rediss://rodistaa-staging.cache.amazonaws.com:6379
REDIS_PASSWORD=<REDIS-AUTH-TOKEN>

# ==================== AUTHENTICATION ====================
JWT_SECRET=<STAGING-JWT-SECRET>
JWT_REFRESH_SECRET=<STAGING-JWT-REFRESH-SECRET>
JWT_EXPIRES_IN=3600000
SESSION_TIMEOUT=3600000

# ==================== AWS ====================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=<IAM-USER-ACCESS-KEY>
AWS_SECRET_ACCESS_KEY=<IAM-USER-SECRET-KEY>
AWS_S3_BUCKET=rodistaa-staging-uploads

# ==================== PAYMENT (TEST MODE) ====================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=<RAZORPAY-TEST-SECRET-KEY>

# ==================== SECURITY ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=200
ACS_ENABLED=true
ENCRYPTION_KEY=<32-BYTE-HEX-KEY-FOR-AES-256>

# ==================== MONITORING ====================
LOG_LEVEL=debug
SENTRY_DSN=https://xxxxx@sentry.io/staging
METRICS_ENABLED=true

# ==================== TESTING ====================
ENABLE_TEST_ROUTES=true
MOCK_SMS=true
MOCK_PAYMENT=false


# ============================================
# RODISTAA PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to production.env and fill in actual values
# NEVER commit production.env to version control!

# ==================== APPLICATION ====================
NODE_ENV=production
PORT=4000
API_BASE_URL=https://api.rodistaa.com
FRONTEND_URL=https://portal.rodistaa.com

# ==================== DATABASE ====================
PGHOST=rodistaa-prod.cluster-xxxxxxxxx.ap-south-1.rds.amazonaws.com
PGPORT=5432
PGUSER=rodistaa_prod
PGPASSWORD=<STRONG-PASSWORD-FROM-AWS-SECRETS-MANAGER>
PGDATABASE=rodistaa_production
PGSSLMODE=require
PGMAXCONNECTIONS=100

# ==================== REDIS ====================
REDIS_URL=rediss://rodistaa-prod.cache.amazonaws.com:6379
REDIS_PASSWORD=<REDIS-AUTH-TOKEN>

# ==================== AUTHENTICATION ====================
JWT_SECRET=<GENERATE-STRONG-64-CHAR-RANDOM-STRING>
JWT_REFRESH_SECRET=<GENERATE-DIFFERENT-64-CHAR-RANDOM-STRING>
JWT_EXPIRES_IN=3600000
SESSION_TIMEOUT=3600000

# ==================== AWS ====================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=<IAM-USER-ACCESS-KEY>
AWS_SECRET_ACCESS_KEY=<IAM-USER-SECRET-KEY>
AWS_S3_BUCKET=rodistaa-prod-uploads

# ==================== PAYMENT ====================
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=<RAZORPAY-SECRET-KEY>

# ==================== SECURITY ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
ACS_ENABLED=true
ENCRYPTION_KEY=<32-BYTE-HEX-KEY-FOR-AES-256>

# ==================== MONITORING ====================
LOG_LEVEL=info
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
METRICS_ENABLED=true


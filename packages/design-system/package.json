{
  "name": "@rodistaa/design-system",
  "version": "1.0.0",
  "description": "Rodistaa Unified Design System - Mobile & Web",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "figma:sync": "cd ../design-system-automation && pnpm figma:sync",
    "tokens:generate": "cd ../design-system-automation && pnpm tokens:generate",
    "tokens:validate": "cd ../design-system-automation && pnpm tokens:validate",
    "tokens:scan": "node scripts/scan-hardcoded.js",
    "storybook:snap": "cd ../design-system-automation && pnpm storybook:snap",
    "token:full": "cd ../design-system-automation && pnpm token:full"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "^0.72.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/addon-a11y": "^7.6.0",
    "@storybook/addon-docs": "^7.6.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-webpack5": "^7.6.0",
    "@storybook/test": "^7.6.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "storybook": "^7.6.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  }
}

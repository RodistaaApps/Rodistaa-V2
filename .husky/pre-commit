#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate design tokens if changed
if git diff --cached --name-only | grep -q "packages/design-system/tokens/\|packages/design-system/src/tokens/"; then
  echo "ğŸ¨ Validating design tokens..."
  cd packages/design-system
  pnpm tokens:validate || exit 1
  cd ../..
fi

# Run lint-staged
npx lint-staged

# Rodistaa Backend - Environment Configuration Template
# Copy this file to .env and fill in the values

NODE_ENV=development
PORT=4000
DATABASE_URL=postgresql://rodistaa_user:password@localhost:5432/rodistaa_dev
JWT_SECRET=change-this-in-production
JWT_REFRESH_SECRET=change-this-too-in-production
LOCAL_KMS_KEY_ID=kyc-encryption-key-dev

# ACS Rules Configuration
# For Docker: ./acs_rules_top25.yaml (file copied to /app in Dockerfile)
# For local dev: ../../acs_rules_top25.yaml (relative to packages/backend)
ACS_RULES_PATH=./acs_rules_top25.yaml

ADAPTER_MODE=MOCK
LOG_LEVEL=info


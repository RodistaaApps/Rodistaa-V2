{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@rodistaa/app-shared": ["packages/app-shared/src"],
      "@rodistaa/backend/*": ["packages/backend/src/*"],
      "@rodistaa/acs/*": ["packages/acs/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".expo"]
}

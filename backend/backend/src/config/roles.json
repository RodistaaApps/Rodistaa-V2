{
  "roles": {
    "SuperAdmin": {
      "description": "Full system access including user management and exports with PII",
      "permissions": [
        "trucks:read",
        "trucks:write",
        "trucks:block",
        "trucks:unblock",
        "trucks:reverify",
        "trucks:export",
        "trucks:export_pii",
        "trucks:bulk_action",
        "trailers:link",
        "trailers:unlink",
        "tickets:read",
        "tickets:create",
        "tickets:assign",
        "tickets:resolve",
        "tickets:escalate",
        "analytics:read",
        "audit:read",
        "users:read",
        "users:write",
        "users:delete",
        "notifications:send",
        "webhooks:manage"
      ]
    },
    "ComplianceOfficer": {
      "description": "View trucks, block/unblock, create and assign tickets",
      "permissions": [
        "trucks:read",
        "trucks:block",
        "trucks:unblock",
        "trucks:export",
        "trailers:link",
        "trailers:unlink",
        "tickets:read",
        "tickets:create",
        "tickets:assign",
        "tickets:resolve",
        "analytics:read",
        "audit:read"
      ]
    },
    "OpsManager": {
      "description": "Operational actions including reverify, bulk actions, ticket assignment",
      "permissions": [
        "trucks:read",
        "trucks:reverify",
        "trucks:bulk_action",
        "trucks:export",
        "trailers:link",
        "tickets:read",
        "tickets:assign",
        "tickets:create",
        "analytics:read"
      ]
    },
    "ReadOnlyAnalyst": {
      "description": "View-only access to dashboards and exports (no PII)",
      "permissions": [
        "trucks:read",
        "trucks:export",
        "analytics:read",
        "audit:read"
      ]
    }
  },
  "permissions": {
    "trucks:read": {
      "resource": "truck",
      "action": "read",
      "description": "View truck details and list"
    },
    "trucks:write": {
      "resource": "truck",
      "action": "write",
      "description": "Update truck information"
    },
    "trucks:block": {
      "resource": "truck",
      "action": "block",
      "description": "Block a truck from operations",
      "requires_reason": true,
      "creates_audit": true
    },
    "trucks:unblock": {
      "resource": "truck",
      "action": "unblock",
      "description": "Unblock a previously blocked truck",
      "requires_reason": true,
      "creates_audit": true
    },
    "trucks:reverify": {
      "resource": "truck",
      "action": "reverify",
      "description": "Trigger re-verification with VAHAN",
      "creates_audit": true
    },
    "trucks:export": {
      "resource": "truck",
      "action": "export",
      "description": "Export truck data to CSV/PDF"
    },
    "trucks:export_pii": {
      "resource": "truck",
      "action": "export_pii",
      "description": "Export truck data including PII (owner name, mobile)"
    },
    "trucks:bulk_action": {
      "resource": "truck",
      "action": "bulk_action",
      "description": "Perform bulk operations on multiple trucks",
      "creates_audit": true
    },
    "trailers:link": {
      "resource": "trailer",
      "action": "link",
      "description": "Link trailer to tractor",
      "creates_audit": true
    },
    "trailers:unlink": {
      "resource": "trailer",
      "action": "unlink",
      "description": "Unlink trailer from tractor",
      "requires_reason": true,
      "creates_audit": true
    },
    "tickets:read": {
      "resource": "ticket",
      "action": "read",
      "description": "View tickets"
    },
    "tickets:create": {
      "resource": "ticket",
      "action": "create",
      "description": "Create new tickets",
      "creates_audit": true
    },
    "tickets:assign": {
      "resource": "ticket",
      "action": "assign",
      "description": "Assign tickets to team members",
      "creates_audit": true
    },
    "tickets:resolve": {
      "resource": "ticket",
      "action": "resolve",
      "description": "Resolve and close tickets",
      "requires_reason": true,
      "creates_audit": true
    },
    "tickets:escalate": {
      "resource": "ticket",
      "action": "escalate",
      "description": "Escalate tickets",
      "creates_audit": true
    },
    "analytics:read": {
      "resource": "analytics",
      "action": "read",
      "description": "View analytics dashboards"
    },
    "audit:read": {
      "resource": "audit",
      "action": "read",
      "description": "View audit logs"
    },
    "users:read": {
      "resource": "user",
      "action": "read",
      "description": "View admin users"
    },
    "users:write": {
      "resource": "user",
      "action": "write",
      "description": "Create and update admin users"
    },
    "users:delete": {
      "resource": "user",
      "action": "delete",
      "description": "Delete admin users"
    },
    "notifications:send": {
      "resource": "notification",
      "action": "send",
      "description": "Send notifications"
    },
    "webhooks:manage": {
      "resource": "webhook",
      "action": "manage",
      "description": "Manage webhook subscriptions"
    }
  }
}


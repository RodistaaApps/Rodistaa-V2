{
  "name": "rodistaa-monorepo",
  "version": "1.0.0",
  "description": "Rodistaa Platform - Complete Full-Stack Monorepo",
  "private": true,
  "scripts": {
    "dev:all": "pnpm -w -r --parallel dev",
    "build:all": "pnpm -w -r build",
    "test:all": "pnpm -w -r test",
    "lint:all": "pnpm -w -r lint",
    "typecheck:all": "pnpm -w -r typecheck",
    "clean:all": "pnpm -w -r clean",
    "package:zip": "node scripts/package-zip.js",
    "health-check": "node scripts/health-check.js",
    "deployment-check": "node scripts/deployment-checklist.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@egjs/hammerjs": "^2.0.17",
    "@react-navigation/core": "^7.13.5",
    "@react-navigation/elements": "^2.9.1",
    "@react-navigation/routers": "^7.5.2",
    "@tanstack/query-core": "^5.90.12",
    "color": "^5.0.3",
    "color-convert": "^3.1.3",
    "color-name": "^2.1.0",
    "color-string": "^2.1.4",
    "css-in-js-utils": "^3.1.0",
    "decode-uri-component": "^0.4.1",
    "escape-string-regexp": "^5.0.0",
    "events": "^3.3.0",
    "fast-deep-equal": "^3.1.3",
    "fbjs": "^3.0.5",
    "filter-obj": "^6.1.0",
    "hoist-non-react-statics": "^3.3.2",
    "inline-style-prefixer": "^7.0.1",
    "invariant": "^2.2.4",
    "memoize-one": "^6.0.0",
    "nanoid": "^5.1.6",
    "nullthrows": "^1.1.1",
    "postcss-value-parser": "^4.2.0",
    "query-string": "^7.1.3",
    "react-is": "^19.2.1",
    "scheduler": "^0.27.0",
    "split-on-first": "^4.0.0",
    "styleq": "^0.2.1",
    "use-latest-callback": "^0.3.3",
    "use-sync-external-store": "^1.6.0",
    "warn-once": "^0.1.1"
  }
}
